{
  "include": ["src"],
  "exclude": ["dist"],
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
  "compilerOptions": {
    "strict": true,
    "types": ["vite/client"],
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
